<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:weightSum="1"
              android:layout_height="match_parent">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:id="@+id/layout_search"


    >

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:src="@drawable/icon_back"


                   android:id="@+id/imgback"

        ></ImageView>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:id="@+id/txtdate_of_lesson"
                  android:textSize="25dp"
                  android:textColor="@color/white"
                  android:gravity="center"
                  android:layout_marginLeft="10dp"
                  android:layout_toEndOf="@id/imgback"
        ></TextView>
        <EditText android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:id="@+id/txtSearch"
                  android:layout_marginVertical="10dp"
                  android:layout_marginLeft="10dp"
                  android:background="@drawable/background_txtsearch"
                  android:hint="@string/hint_txtSearch"
                  android:layout_toLeftOf="@id/layout_btn_event"
                  android:layout_toRightOf="@id/imgback"
                  android:visibility="gone"
                  android:textColor="@color/black"
                  android:textColorHint="@color/gray_btn_bg_color"
                  android:maxLines="1"

        ></EditText>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_alignParentEnd="true"
                      android:layout_height="match_parent"
                      android:id="@+id/layout_btn_event"
                      android:orientation="horizontal">
            <ImageView android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:src="@drawable/icon_search"

                       android:layout_marginLeft="10dp"
                       android:id="@+id/imgsearch"

            ></ImageView>

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:src="@drawable/file"
                       android:visibility="gone"
                       android:layout_marginLeft="10dp"
                       android:id="@+id/imgExport"


            ></ImageView>
        </LinearLayout>


    </RelativeLayout>

</LinearLayout>